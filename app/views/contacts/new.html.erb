<div class="inner_page_about">
</div>
<div class="contact" id="contact">
	 <div class="container">
			<h3 class="title">Contact Us</h3>
			<div class="col-md-6 contact-us">

        <%= simple_form_for @contact, :url => contacts_path  do |f| %>
        <div class="control-group form-group">
                      <div class="controls">
                        <%= f.input :name, class: "form-control" %>
                        <p class="help-block"></p>

                      </div>
                    </div>
                    <div class="control-group form-group">
                                  <div class="controls">
                                    <%= f.input :email, class: "form-control" %>
                                    <p class="help-block"></p>

                                  </div>
                                </div>
                                <div class="control-group form-group">
                                              <div class="controls">
                                                <%= f.input :message, class: "form-control", as: :text, :input_html => {:rows => 10, :col => 20}  %>
                                                <p class="help-block"></p>

                                              </div>
                                            </div>
																						<div id="success"></div>


																														<%= f.submit :submit, class: "click" %>

        <% end %>

			</div>
			<div class="col-md-6 contactright">
				 <h3>Contact Address</h3>
				 <div class="footer_grid_left">
						<div class="contact_footer_grid_left">
							 <i class="fa fa-map-marker" aria-hidden="true"></i>
						</div>
						<p>3481 Melrose Place, Beverly Hills, <span>New York City 90210.</span></p>
				 </div>
				 <div class="footer_grid_left">
						<div class="contact_footer_grid_left">
							 <i class="fa fa-phone" aria-hidden="true"></i>
						</div>
						<p>+(000) 123 4565 32 <span>+(010) 123 4565 35</span></p>
				 </div>
				 <div class="footer_grid_left">
						<div class="contact_footer_grid_left">
							 <i class="fa fa-envelope-o" aria-hidden="true"></i>
						</div>
						<p><a href="mailto:support@apldeliveries.com">support@apldeliveries.com</a> 
							 <span><a href="mailto:support@apldeliveries.com">support@apldeliveries.com</a></span>
						</p>
				 </div>
			</div>
			<div class="clearfix"> </div>
			</div>
			</div>
